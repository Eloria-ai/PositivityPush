# Positivity Push Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
PORT=8000

# Database Settings (Supabase)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Stripe Settings
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key

# WhatsApp Business API Settings
WA_TOKEN=your_whatsapp_access_token
WA_PHONE_ID=your_phone_number_id
WA_BUSINESS_NUMBER=1234567890
WA_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# OpenAI Settings
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# mem0 Settings (for user memory/context)
MEM0_API_KEY=your-mem0-api-key
MEM0_URL=https://api.mem0.ai

# Redis/Celery Settings (for background tasks)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Settings (SendGrid)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=hello@positivitypush.com

# Frontend URLs
FRONTEND_URL=https://positivity-push.vercel.app